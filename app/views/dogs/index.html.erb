<p id="notice"><%= notice %></p>
<div class="container index-title" style="text-align: center">
  <h1>Dogs</h1>
</div>

<div class="container">
  <table class="table table-striped table-hover">
    <caption>List of Dogs in Daycare</caption>
    <thead>
      <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Dob</th>
        <th>In daycare</th>
        <th>Vet</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dogs.each do |dog| %>
        <tr>
          <td><%= dog.name %></td>
          <td><%= dog.breed.try(:name) %></td>
          <td><%= dog.weight %></td>
          <td><%= dog.dob %></td>
          <td><%= dog.in_daycare %></td>
          <td><%= dog.vet %></td>
          <td><%= link_to fa_icon('eye'), dog %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_dog_path(dog) %></td>
          <td><%= link_to fa_icon('trash'), dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="container form-button">
  <%= link_to 'New Dog', new_dog_path, class: 'btn btn-info' %>
</div>
