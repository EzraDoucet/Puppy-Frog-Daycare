<p id="notice"><%= notice %></p>

<div class="container index-title" style="text-align: center">
<h1>Owners</h1>
</div>

<div class="container">
  <table class = "table table-striped table-hover table-responsive{-sm|-md|-lg|-xl}">
    <caption>Dog Owners</caption>

    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Primary phone</th>
        <th>Secondary phone</th>
        <th>Emergency name</th>
        <th>Emergency phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td><%= owner.first_name %></td>
          <td><%= owner.last_name %></td>
          <td><%= owner.street %></td>
          <td><%= owner.city %></td>
          <td><%= owner.state %></td>
          <td><%= owner.zip %></td>
          <td><%= owner.primary_phone %></td>
          <td><%= owner.secondary_phone %></td>
          <td><%= owner.emergency_name %></td>
          <td><%= owner.emergency_phone %></td>
          <td><%= link_to fa_icon('eye'), owner %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_owner_path(owner) %></td>
          <td><%= link_to fa_icon('trash'), owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="container form-button">
  <div class="row">
    <div>
<%= link_to 'New Owner', new_owner_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>