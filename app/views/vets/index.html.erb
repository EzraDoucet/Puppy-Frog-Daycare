<p id="notice"><%= notice %></p>

<div class="container index-title" style="text-align: center">
<h1>Vets</h1>
</div>

<div class="container">
  <table class = "table table-striped table-hover table-responsive{-sm|-md|-lg|-xl}">
    <caption>Vets' Info</caption>
    <thead>
      <tr>
        <th>Doctor</th>
        <th>Clinic</th>
        <th>Phone</th>
        <th>Fax</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vets.each do |vet| %>
        <tr>
          <td><%= vet.doctor %></td>
          <td><%= vet.clinic %></td>
          <td><%= vet.phone %></td>
          <td><%= vet.fax %></td>
          <td><%= link_to fa_icon('eye'), vet %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_vet_path(vet) %></td>
          <td><%= link_to fa_icon('trash'), vet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="container form-button">
  <div class="row">
    <div>
<%= link_to 'New Vet', new_vet_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>